<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infoactivities.InfoBeteActivity">

    <TextView
        android:id="@+id/textViewBeteInfo"
        android:layout_width="248dp"
        android:layout_height="63dp"
        android:layout_marginTop="60dp"
        android:text="Ski information"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFirmaBete3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="287dp"
        android:text="Brand"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewBrandBeteS"
        android:layout_width="303dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewFirmaBete3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewFirmaBete3"
        app:layout_constraintTop_toBottomOf="@+id/textViewFirmaBete3" />

    <TextView
        android:id="@+id/textViewDescriereBete"
        android:layout_width="304dp"
        android:layout_height="187dp"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewBrandBeteS"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textViewBrandBeteS"
        app:layout_constraintTop_toBottomOf="@+id/textViewBrandBeteS" />

    <Button
        android:id="@+id/buttonAlegeBete"
        android:layout_width="114dp"
        android:layout_height="69dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="112dp"
        android:text="Choose poles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>