<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".administrator.FormularAdaugareActivity">

    <EditText
        android:id="@+id/editTextLungime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Length"
        android:inputType="textPersonName"
        android:text="1"
        app:layout_constraintEnd_toEndOf="@+id/editTextDescriereAdaugareEchipament"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextDescriereAdaugareEchipament"
        app:layout_constraintTop_toBottomOf="@+id/editTextDescriereAdaugareEchipament" />

    <EditText
        android:id="@+id/editTextFirma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="158dp"
        android:ems="10"
        android:hint="Brand"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextDescriereAdaugareEchipament"
        android:layout_width="315dp"
        android:layout_height="134dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Description"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/editTextFirma"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextFirma"
        app:layout_constraintTop_toBottomOf="@+id/editTextFirma" />

    <EditText
        android:id="@+id/editTextMarimeClapar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Boots size"
        android:inputType="numberSigned"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextDescriereAdaugareEchipament"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextDescriereAdaugareEchipament"
        app:layout_constraintTop_toBottomOf="@+id/editTextDescriereAdaugareEchipament"
        app:layout_constraintVertical_bias="0.092" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupCascaOchelari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/editTextDescriereAdaugareEchipament"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextDescriereAdaugareEchipament"
        app:layout_constraintTop_toBottomOf="@+id/editTextDescriereAdaugareEchipament"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipCopil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="Child" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAdult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="Adult" />

    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/buttonAdaugaProdus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="234dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="144dp"
        android:text="Add product"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewTitluAdaugaProdus"
        android:layout_width="173dp"
        android:layout_height="42dp"
        android:layout_marginStart="123dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="123dp"
        android:text="Add product"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>